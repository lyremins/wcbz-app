<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="综合态势"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fly_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:text="飞行计划"
                android:textColor="#333"
                android:lineSpacingExtra="4dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_more_fly_plan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_blue_r_2"
                android:text="更多"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_bz_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="保障计划"
                android:textColor="#333"
                android:lineSpacingExtra="4dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_more_bz_plan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_blue_r_2"
                android:text="更多"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_plane"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="查看飞机态势"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/plane"/>

                <TextView
                    android:id="@+id/tv_car"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="查看车辆态势"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/car"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="查看人员态势"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/user"/>

                <TextView
                    android:id="@+id/tv_qijian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="查看有寿器件态势"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/qijian"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_danyao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/danyao"
                    android:drawablePadding="3dp"
                    android:gravity="center_horizontal"
                    android:text="查看弹药态势"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="查看有寿器件态势"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:visibility="invisible"
                    android:drawableTop="@mipmap/user"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>