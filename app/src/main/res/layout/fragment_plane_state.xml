<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="选择飞机："
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/tv_plane"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:hint="点击选择"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="12dp"
                android:drawableRight="@mipmap/paixu"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="选择飞机状态"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_plane_state"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:hint="点击选择"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="12dp"
                android:drawableRight="@mipmap/paixu"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="选择飞机任务状态"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_plane_task"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:hint="点击选择"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="12dp"
                android:drawableRight="@mipmap/paixu"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"/>

            <LinearLayout
                android:id="@+id/lt_fault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="发现人："
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/et_user"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:background="@drawable/bg_white_r_2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="故障类型："
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/tv_fault_type"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:hint="点击选择"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@mipmap/paixu"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="故障原因："
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/et_reason"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:background="@drawable/bg_white_r_2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="故障件名称："
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/et_gzj_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:background="@drawable/bg_white_r_2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="故障件型号："
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/et_gzj_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:background="@drawable/bg_white_r_2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="故障描述："
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/et_des"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:background="@drawable/bg_white_r_2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="生产厂："
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/et_fac"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:background="@drawable/bg_white_r_2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="装机日期"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/tv_zj_date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:hint="点击选择"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@mipmap/paixu"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="添加图片"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView
                        android:id="@+id/img_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:src="@mipmap/add_person"/>

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="30dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="选择飞机进场状态"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_plane_enter"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:hint="点击选择"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="12dp"
                android:drawableRight="@mipmap/paixu"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="填写起落次数："
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_qiluo_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:background="@drawable/bg_white_r_2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="选择起落时间："
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_qiluo_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="1dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:hint="选择时间"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:layout_marginRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="填写起落时间数："
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_qiluo_time_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:background="@drawable/bg_white_r_2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="填写飞行小时："
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_fly_hour"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:background="@drawable/bg_white_r_2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:layout_marginRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="发动机1小时数："
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_1_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:background="@drawable/bg_white_r_2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="发动机2小时数："
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_2_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:background="@drawable/bg_white_r_2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"/>

            <CheckBox
                android:id="@+id/ck_wuqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="武器是否发射"/>

            <EditText
                android:id="@+id/et_wuqi_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:hint="填写武器发射数量"
                android:background="@drawable/bg_white_r_2"
                android:inputType="number"
                android:visibility="gone"
                android:layout_marginLeft="10dp"/>
            
            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="上报数据"
                android:textColor="#fff"
                android:layout_margin="12dp"
                android:background="@drawable/bg_blue_r_2"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>